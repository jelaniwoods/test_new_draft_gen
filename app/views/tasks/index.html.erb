<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all tasks
    </h1>

    <h2>
      Add a new task
    </h2>

    <hr>

    <form action="/post_task" method="post">
  
    
          <div class="form-group">
          <label for="name">
            Name
          </label>

                      <input type="text" id="name" name="name" class="form-control">
          </div>

    
          <div class="form-group">
          <label for="due_on">
            Due on
          </label>

            
        <input type="datetime-local" id="due_on" name="due_on" class="form-control">

          </div>

    
      <button class="btn btn-block btn-outline-secondary">
        Create task
      </button>
    </form>

    <hr>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Due on
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= task.id %>
        </td>

        <td>
          <%= task.name %>
        </td>

        <td>
          <%= task.due_on %>
        </td>

        <td>
          <%= time_ago_in_words(task.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(task.updated_at) %> ago
        </td>

        <td>
          <a href="/tasks/<%= task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
