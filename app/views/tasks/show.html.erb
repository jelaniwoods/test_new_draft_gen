<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Task #<%= @task.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/tasks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">

      </div>

      <div class="col">
        <a href="/delete_task/<%= @task.id %>" class="btn btn-block btn-outline-secondary">
          Delete task
        </a>
      </div>
    </div>
    <div>
      <h1>
        Edit task #<%= @task.id %>
      </h1>

      <hr>

            <form action="/patch_task/<%= @task.id %>" method="post">
      
                          <div class="form-group">
          <label for="name">
            Name
          </label>

      
        <input type="text" id="name" name="name" class="form-control" value="<%= @task.name %>">

              </div>
            
                          <div class="form-group">
          <label for="due_on">
            Due on
          </label>

      
        <input type="text" id="due_on" name="due_on" class="form-control" value="<%= @task.due_on %>">

              </div>
            
              <button class="btn btn-block btn-outline-secondary">
          Update task
        </button>
      </form>

      <hr>
    </div>
    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @task.name %>
      </dd>

      <dt>
        Due on
      </dt>
      <dd>
        <%= @task.due_on %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@task.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@task.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

